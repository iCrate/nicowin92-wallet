{
  "name": "@emeraldwallet/ledger",
  "private": true,
  "version": "2.1.1",
  "description": "Ledger",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf lib/ && tsc",
    "build:dist": "rimraf lib/ && tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-node": "0.4.0-0.26.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^12.12.0",
    "jest": "^24.1.0",
    "node-abi": "2.12.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0"
  },
  "workspaces": {
    "nohoist": [
      "**/node-abi",
      "**/node_abi/**"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
