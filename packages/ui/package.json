{
  "name": "@emeraldwallet/ui",
  "version": "1.2.1",
  "description": "UI components for Emerald wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build:dist": "rimraf lib/ && tsc",
    "build": "rimraf lib/ && tsc",
    "test": "jest --no-cache --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage && codecov",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@emeraldplatform/core": "^0.5.0-beta.6",
    "@emeraldplatform/ui": "0.5.0-beta.7",
    "@emeraldplatform/ui-icons": "0.5.0-beta.6",
    "@emeraldwallet/core": "^1.2.1",
    "@material-ui/core": "3.9.2",
    "bignumber.js": "8.0.2",
    "qrcode.react": "^0.9.3",
    "react": "16.8.4",
    "react-dom": "16.8.4"
  },
  "devDependencies": {
    "@storybook/react": "^5.0.0",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "@types/qrcode.react": "^0.8.2",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-preset-react-app": "^7.0.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "jest": "24.1.0",
    "jest-canvas-mock": "^2.0.0-beta.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "3.3.4000"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
