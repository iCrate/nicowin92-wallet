{
  "name": "@emeraldwallet/ui",
  "version": "2.0.3",
  "description": "UI components for Emerald wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build:dist": "rimraf lib/ && tsc && yarn copyfiles -u 1 src/**/*.png lib/",
    "build": "rimraf lib/ && tsc && yarn copyfiles -u 1 src/**/*.png lib/",
    "test": "jest --no-cache --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage && codecov",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@emeraldplatform/core": "0.5.1",
    "@emeraldplatform/eth": "0.5.1",
    "@emeraldplatform/ui": "^0.5.2",
    "@emeraldplatform/ui-icons": "^0.5.2",
    "@emeraldwallet/core": "^2.0.3",
    "@emeraldwallet/erc20": "^2.0.3",
    "@emeraldwallet/workflow": "^2.0.3",
    "@material-ui/core": "^4.2.0",
    "@material-ui/lab": "^4.0.0-alpha.19",
    "@material-ui/styles": "^4.2.0",
    "bignumber.js": "8.0.2",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.6",
    "react-autosuggest": "^9.4.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "5.1.0-alpha.32",
    "@storybook/react": "5.1.0-alpha.32",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.10.4",
    "@types/qrcode.react": "^0.8.2",
    "@types/react-autosuggest": "^9.3.7",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "^24.7.1",
    "jest-canvas-mock": "^2.0.0-beta.1",
    "jest-transform-stub": "^2.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "3.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  }
}
