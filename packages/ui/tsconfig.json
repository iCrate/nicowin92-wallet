{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "strict": false,
    "jsx": "react",
    "rootDirs": ["src", "stories"],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
