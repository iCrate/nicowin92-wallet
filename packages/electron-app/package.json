{
  "name": "@emeraldwallet/electron-app",
  "version": "2.1.2",
  "description": "Emerald Wallet Electron Shell",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf lib/ && tsc",
    "build:dist": "rimraf lib/ && tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^12.12.0",
    "@types/uuid": "^3.4.4",
    "electron": "^7.0.1",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "@emeraldplatform/eth": "0.5.1",
    "@emeraldwallet/core": "^2.1.2",
    "@emeraldwallet/services": "^2.1.2",
    "devtron": "^1.4.0",
    "electron-log": "4.0.3",
    "uuid": "^3.3.2"
  }
}
