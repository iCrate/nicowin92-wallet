{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "rootDirs": ["src"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
