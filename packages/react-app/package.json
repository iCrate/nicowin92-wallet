{
  "name": "@emeraldwallet/react-app",
  "version": "2.0.3",
  "description": "Emerald Wallet React Application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf lib/ && tsc",
    "build:dist": "rimraf lib/ && tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov"
  },
  "dependencies": {
    "@emeraldplatform/core": "0.5.8",
    "@emeraldplatform/eth": "0.5.1",
    "@emeraldplatform/ui": "0.5.11",
    "@emeraldplatform/ui-icons": "^0.5.2",
    "@emeraldwallet/core": "^2.0.3",
    "@emeraldwallet/erc20": "^2.0.3",
    "@emeraldwallet/store": "^2.0.3",
    "@emeraldwallet/ui": "^2.0.3",
    "@material-ui/core": "^4.4.2",
    "@material-ui/styles": "^4.3.0",
    "classnames": "2.2.5",
    "i18next": "^17.0.13",
    "i18next-browser-languagedetector": "^3.0.3",
    "qrcode.react": "^0.9.3",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-dropzone": "6",
    "react-i18next": "^10.12.2",
    "react-redux": "^7.1.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "5.2.1",
    "@storybook/react": "5.2.1",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "@types/react-redux": "^7.1.1",
    "@types/uuid": "^3.4.4",
    "electron": "4.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.1.0",
    "jest-canvas-mock": "^2.1.1",
    "jest-transform-stub": "^2.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "3.4.2"
  },
  "jest": {
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
