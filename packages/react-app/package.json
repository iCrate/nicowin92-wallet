{
  "name": "@emeraldwallet/react-app",
  "version": "2.1.2",
  "description": "Emerald Wallet React Application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib/ && rimraf tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "build:dist": "yarn clean && yarn compile && yarn copyfiles -u 1 src/**/*.png lib/",
    "build": "yarn clean && yarn compile && yarn copyfiles -u 1 src/**/*.png lib/",
    "tsc": "tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-core": "^0.5.1-rc4",
    "@emeraldplatform/core": "0.5.8",
    "@emeraldplatform/eth": "0.5.1",
    "@emeraldplatform/ui": "0.6.0",
    "@emeraldplatform/ui-icons": "0.6.0",
    "@emeraldwallet/core": "^2.1.2",
    "@emeraldwallet/erc20": "^2.1.2",
    "@emeraldwallet/store": "^2.1.2",
    "@emeraldwallet/ui": "^2.1.2",
    "@material-ui/core": "4.9.10",
    "@material-ui/icons": "4.9.1",
    "classnames": "2.2.5",
    "i18next": "19.3.2",
    "i18next-browser-languagedetector": "4.0.2",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-dropzone": "6",
    "react-i18next": "11.3.3",
    "react-redux": "^7.1.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/addon-actions": "5.2.3",
    "@storybook/react": "5.2.3",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.9",
    "@types/node": "^12.12.0",
    "@types/react-redux": "^7.1.1",
    "@types/uuid": "^3.4.4",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "2.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.1.0",
    "jest-canvas-mock": "^2.1.1",
    "jest-transform-stub": "^2.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
