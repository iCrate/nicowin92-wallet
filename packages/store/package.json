{
  "name": "@emeraldwallet/store",
  "version": "2.4.0-alpha.0",
  "description": "Emerald Redux store",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib/ && rimraf tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "build": "yarn clean && yarn compile",
    "build:dist": "yarn clean && yarn compile",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.12.0",
    "@types/redux-logger": "^3.0.7",
    "@types/uuid": "^3.4.4",
    "electron": "^7.0.1",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts",
      "<rootDir>/src/__mocks__/localStorageMock.ts"
    ],
    "moduleNameMapper": {
      "electron": "<rootDir>/src/__mocks__/electronMock.ts"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.1.0",
    "@emeraldpay/bigamount-crypto": "^0.1.0",
    "@emeraldpay/emerald-vault-core": "^0.5.2",
    "@emeraldplatform/contracts": "^0.5.1",
    "@emeraldplatform/core": "0.5.8",
    "@emeraldplatform/eth": "0.5.1",
    "@emeraldwallet/core": "^2.4.0-alpha.0",
    "@emeraldwallet/erc20": "^2.4.0-alpha.0",
    "@emeraldwallet/history-store": "^2.4.0-alpha.0",
    "@emeraldwallet/ledger": "^2.4.0-alpha.0",
    "bignumber.js": "8.0.2",
    "color-hash": "1.0.3",
    "immer": "^5.3.2",
    "immutable": "3.8.2",
    "lodash": "^4.17.14",
    "redux": "^4.0.4",
    "redux-logger": "3.0.6",
    "redux-saga": "1.1.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "uuid": "^3.3.2"
  }
}
