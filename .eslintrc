{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "phantomjs": true
  },
  "rules": {
    "indent": ["error", 4, {
      "SwitchCase": 1
    }],
    "no-param-reassign": 0,
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "ignore",
      "exports": "ignore",
      "functions": "never"
    }],
    "import/prefer-default-export": 1,
    "max-len": ["error", {"code": 120}],
    "no-unused-vars": 1
  }
}